{
    "name": "dealnews/db-mapper-history",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "PHP Library for adding history tracking to the dealnews/db data mapper class.",
    "config": {
        "optimize-autoloader": true,
        "discard-changes": true,
        "sort-packages": true
    },
    "require": {
        "php": "^8.2",
        "dealnews/db": "^4.0",
        "sarhan/php-flatten": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.90",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpunit/phpunit": "^11"
    },
    "autoload": {
        "psr-4": {
            "DealNews\\DB\\History\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DealNews\\DB\\History\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phan": [
            "phan"
        ],
        "test": [
            "parallel-lint src/ tests/",
            "phpunit --colors=never"
        ],
        "lint": [
            "parallel-lint src/ tests/"
        ],
        "fix": [
            "php-cs-fixer fix --config .php-cs-fixer.dist.php src tests"
        ]
    }
}
